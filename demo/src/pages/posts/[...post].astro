---
import PostLayout from '../../layouts/PostLayout.astro';
import PostHeader from '../../components/PostHeader.astro';

import { generateStaticPaths } from '@jcha0713/astro-notion/api';
import { Notion } from '@jcha0713/astro-notion/components';

export async function getStaticPaths() {
  const data = await generateStaticPaths();
  return data;
}

const { post: postUrl } = Astro.params;
const { pages, pageData, blocks } = Astro.props;
---

<PostLayout {pages} {pageData} {postUrl}>
  <article>
    <PostHeader {pageData} />
    <Notion {blocks} />
  </article>
</PostLayout>

<style lang="scss">
  article > * {
    line-height: 1.625;
  }
</style>
